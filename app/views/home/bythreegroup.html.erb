<% title _("Prometheus 2.0 - Group - ") + params[:group] + '/' + params[:group2] + '/' + params[:group3] %>
<% url "/packages/" + params[:group] + '/' + params[:group2] + '/' + params[:group3] %>

<div class="header"><%= _("Group") %> :: <%= params[:group] %>/<%= params[:group2] %>/<%= params[:group3] %></div><p class="news" />

<% @srpms.each do |srpm| -%>
<p class="news" />
<span class="news-date-new"><%= link_to srpm.name, '/' + params[:locale] + '/srpm/Sisyphus/' + srpm.name, :class => 'news', :title => _("detailed information about the package") -%>
</span><br /><br />
<b><%= _("Current version:") %></b> <span class="news-text"><%= srpm.version %>-<%= srpm.release %></span><br />
<b><%= _("Build time:") %></b> <span class="news-text"><%= srpm.buildtime %> (<%= time_ago_in_words(srpm.buildtime) %> <%= _("ago") %>)</span><br />
<b><%= _("Summary:") %></b> <span class="news-text"><%= srpm.summary %></span><br />

<b><%= _("Changes:") %></b> <div class="para">TODO</div>

<% end -%>
