<% title _("Prometheus 2.0 - Search") %>
<% url '/find.shtml' %>

<div class="header" style="letter-spacing:1px;"><%=h _("Search") %></div>
<p class="break">
<form name="findonsite" action="/<%=h params[:locale] %>/find.shtml" method="GET">
<input type="text" name="request" value="<%=h params[:request] %>" size="20">
<input type="submit" class="top-go" id="subOn" value="<%=h _("search") %>" onmouseover="m_on('subOn')"  onmouseout="m_off('subOn')">
</form>
<br /><br />
<%=h _("On your query") %> &quot;<b><%=h params[:request] %></b>&quot; <%=h _("were found") %> <b><%=h @srpms_count %></b> <%=h n_("RPM:", "RPMs:", @srpms_count) %>

<p class="break"><br />
<table id="bugs" cellspacing="0" cellpadding="3">
<tr>
  <th><%=h _("package") %></th>
  <th><%= _("current<br />version") %></th>
  <th><%=h _("summary") %></th>
</tr>

<% @srpms.each do |srpm| -%>
<tr>
<td class="strange">
  <%= link_to h(srpm.name), '/' + h(params[:locale]) + '/srpm/Sisyphus/' + h(srpm.name), :class => 'news' %>
</td>
<td><%=h srpm.version %>-<%=h srpm.release %></td>
<td><%=h srpm.summary %></td>
</tr>
<% end -%>

</table>

