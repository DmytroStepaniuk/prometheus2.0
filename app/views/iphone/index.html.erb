<ul id="packages" title="<%=h _("Packages") %>">
<% @groups.each do |group| -%>
  <li><%=h group.name %> (<%=h group.counter %>)</li>
<% end -%>
</ul>

<ul id="maintainers" title="<%=h _("Maintainers") %>">
<% @packagers.each do |packager| -%>
  <li><%=h packager.name %></li>
<% end -%>
</ul>

<ul id="teams" title="<%=h _("Teams") %>">
<% @teams.each do |team| -%>
  <li><%=h team.name %></li>
<% end -%>
</ul>

