  <li><%= link_to _('Blog'), _('http://www.livejournal.com/userinfo.bml?user=ru_sisyphus'), :target => '_self' %></li>
  <li><%= link_to _('Planet'), _('http://planet.altlinux.org/'), :target => '_self' %></li>
  <li><%= link_to _('Mailing list'), _('http://lists.altlinux.org/mailman/listinfo/community-en/'), :target => '_self' %></li>
</ul>

<ul id='packages' title='Packages'>
  <% @groups.each do |group| %>
    <% if group.leaf? %>
      <li><%= link_to "#{group.name} (#{group.srpms.count})", iphone_group_path(:group => group.name), :target => '_self' %></li>
    <% else %>
      <!-- TODO -->
    <% end %>
  <% end %>
</ul>

<ul id='maintainers' title='Maintainers'>
  <% @maintainers.each do |maintainer| %>
    <li><%= link_to maintainer.name, iphone_maintainer_path(:login => maintainer.login), :target => '_self' %></li>
  <% end %>
</ul>

<ul id='teams' title='Teams'>
  <% @teams.each do |team| %>
    <li><%= team.name %>
  <% end %>
</ul>

