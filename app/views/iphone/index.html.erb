  <h1 id='pageTitle'></h1>
  <a class='button' href='#' id='backButton'></a>
  <a class='button' href='#searchForm'>Search</a>
</div>

<ul id='home' selected='true' title='Home'>
  <li>
    <a href='#packages'><%= _('Packages') %></a>
  </li>
  <li>
    <a href='#maintainers'><%= _('Maintainers') %></a>
  </li>
  <li>
    <a href='#teams'><%= _('Teams') %></a>
  </li>
  <li>
    <a href='#security'><%= _('Security') %></a>
  </li>
  <li>
    <a href='#about'><%= _('About') %></a>
