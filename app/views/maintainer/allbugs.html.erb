<% title _("Prometheus 2.0 - Maintainer &laquo;") + @packager.name + _("&raquo; - Bugs and FR (All)") -%>
<% url "/packager/" + @packager.login + "/allbugs" -%>

<div class="header"><%= _("Maintainer:") %> <%= @packager.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>" class="news" title="<%= _("information about maintainer") %>"><%= _("Information") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/srpms" class="news" title="<%= _("packages which was built by this maintainer") %>"><%= _("Packages") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/gear" class="news" title="<%= _("gear") %>"><%= _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Bugs and FR") %></b>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><p class="news" /><br />
<b><%= _("Total records:") %></b> <%= @allbugs.count %> (<span style='color:red'><%= @bugs.count %></span>|<%= @allbugs.count - @bugs.count %>)

<div style="text-align:left;margin-left:2em;margin-top:1.5em;">
<span class="tabunsel">&nbsp;<%= link_to _("open"), '/' + params[:locale] + '/packager/' + @packager.login + '/bugs', :class => 'news' %>&nbsp;</span>
<span class="tabsel">&nbsp;<%= _("total") %>&nbsp;</span>
</div>

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _("id") %></th>
    <th><%= _("package") %></th>
    <th><%= _("severity") %></th>
    <th><%= _("status") %></th>
    <th><%= _("resolution") %></th>
    <th><%= _("reporter") %></th>
    <th><%= _("summary") %></th>
  </tr>

<% @allbugs.each do |bug| -%>
  <tr>
    <td>
      <%= link_to bug.bug_id, 'https://bugzilla.altlinux.org/' + bug.bug_id.to_s, :class => 'news', :target => '_blank' %>
    </td>
    <td><%= bug.component %></td>
    <td><%= bug.bug_severity %></td>
    <td><%= bug.bug_status %></td>
    <td><%= bug.resolution %></td>
    <td><%= bug.reporter.gsub('@', ' at ') %></td>
    <td><%= bug.short_desc %></td>
  </tr>
<% end -%>

</table>
