<% title _('Prometheus 2.0 - Maintainer &laquo;%s&raquo; - Bugs and FR') % _(@maintainer.name) %>

<div id='main-content'>

<div class="header"><%= _('Maintainer:') %> <%= _(@maintainer.name) %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path('Sisyphus', @maintainer), class: 'news', title: _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Packages'), srpms_maintainer_path('Sisyphus', @maintainer), class: 'news', title: _('packages which was built by this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_maintainer_path(@maintainer), class: 'news', title: _('gear') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Bugs and FR') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('FTBFS'), ftbfs_maintainer_path(@maintainer), class: 'news', title: _('FTBFS') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), class: 'news', title: _('repocop bugreports') %>&nbsp;</span><p class="news" /><br>
<b><%= _('Total records:') %></b> <%= @allbugs.count %> (<span style='color: red;'><%= @bugs.count %></span>|<%= @allbugs.count - @bugs.count %>)

<div style="text-align:left;margin-left:2em;margin-top:1.5em;">
<span class="tabsel">&nbsp;<%= _('open') %>&nbsp;</span>
<span class="tabunsel">&nbsp;<%= link_to _('total'), allbugs_maintainer_path(@maintainer), class: 'news' %>&nbsp;</span>
</div>

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _('id') %></th>
    <th><%= _('package') %></th>
    <th><%= _('severity') %></th>
    <th><%= _('status') %></th>
    <th><%= _('reporter') %></th>
    <th><%= _('summary') %></th>
  </tr>

  <% @bugs.each do |bug| %>
    <tr>
      <td>
        <%= bug.link_to_bugzilla %>
      </td>
      <td><%= bug.component %></td>
      <td><%= bug.bug_severity %></td>
      <td><%= bug.bug_status %></td>
      <td><%= bug.reporter.gsub('@', ' at ') %></td>
      <td style="text-align: left">
        <%= bug.short_desc %>
      </td>
    </tr>
  <% end %>
</table>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
