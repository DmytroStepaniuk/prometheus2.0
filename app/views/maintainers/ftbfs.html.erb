<% title _("Prometheus 2.0 - Maintainer &laquo;") + @maintainer.name + _("&raquo;") %>

<div id='main-content'>

<div class="header"><%= _('Maintainer:') %> <%= @maintainer.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path(@branch, @maintainer), :class => 'news', :title => _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Packages'), srpms_maintainer_path(@branch, @maintainer), :class => 'news', :title => _('packages which was built by this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_maintainer_path(@maintainer), :class => 'news', :title => _('gear') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_maintainer_path(@maintainer), :class => 'news', :title => _('Bugs/FR statistics assigned to this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('FTBFS') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), :class => 'news', :title => _('repocop bugreports') %>&nbsp;</span><p class="break" />

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _('package') %></th>
    <th><%= raw _('current<br />version') %></th>
    <th><%= _('arch') %></th>
    <th><%= _('weeks') %></th>
  </tr>

  <% @ftbfs.each do |f| %>
    <tr>
      <td><%= link_to f.name, srpm_path('Sisyphus', f.name), :class => 'news' %></td>
      <td><%= "#{f.version}-#{f.release}" %></td>
      <td><%= f.arch %></td>
      <td><%= f.weeks %></td>
    </tr>
  <% end %>

</table>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
