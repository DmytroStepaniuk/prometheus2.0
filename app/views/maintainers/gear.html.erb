<% title _("Prometheus 2.0 - Maintainer &laquo;%s&raquo; - Gear") % @maintainer.name %>

<div id='main-content'>

<div class="header"><%= _('Maintainer:') %> <%= @maintainer.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path(@branch, @maintainer), :class => 'news', :title => _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Packages'), srpms_maintainer_path(@branch, @maintainer), :class => 'news', :title => _('packages which was built by this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Gear') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_maintainer_path(@maintainer), :class => 'news', :title => _('Bugs/FR statistics assigned to this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('FTBFS'), ftbfs_maintainer_path(@maintainer), :class => 'news', :title => _('FTBFS') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), :class => 'news', :title => _('repocop bugreports') %>&nbsp;</span><p class="break" />

<% if @gears.count != 0 %>
<table id="bugs" cellspacing="0" cellpadding="3" class="gear">
  <thead>
    <tr>
      <th><%= _('Git repo') %></th>
      <th><%= _('Time') %></th>
    </tr>
  </thead>
  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td style="text-align: left">
          <% login = gear.maintainer.login %>
          <% login = 'php_coder' if gear.maintainer.login == 'php-coder' %>
          <% login = 'psolntsev' if gear.maintainer.login == 'p_solntsev' %>
          <%= link_to gear.repo, "http://git.altlinux.org/people/#{login}/packages/?p=#{gear.repo}.git", :class => 'news' %>
        </td>
        <td><%= gear.lastchange %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

</div>

<div id="bottom-offset-l">
  <div id="bottom-offset-r">
    &nbsp;
  </div>
</div>
