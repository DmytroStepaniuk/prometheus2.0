<% title _("Prometheus 2.0 - Maintainer &laquo;") + @maintainer.name + _("&raquo; - Gear") -%>
<% url "/packager/" + @maintainer.login + "/gear" -%>

<div id='main-content'>

<div class="header"><%= _("Maintainer:") %> <%= @maintainer.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _("Information"), maintainer_path(:id => @maintainer.login, :branch => @branch.name), :class => 'news', :title => _("information about maintainer") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Packages"), srpms_maintainer_path(:id => @maintainer.login, :branch => @branch.name), :class => 'news', :title => _("packages which was built by this maintainer") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Gear") %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Bugs and FR"), bugs_maintainer_path(:id => @maintainer.login), :class => 'news', :title => _("Bugs/FR statistics assigned to this maintainer") %>&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Repocop"), repocop_maintainer_path(:id => @maintainer.login), :class => 'news', :title => _("repocop bugreports") %>&nbsp;</span><p class="break" />

<% if @gitrepos.count != 0 -%>
<table style="pretty">
  <% @gitrepos.each do |gitrepo| -%>
    <tr>
      <td style="border-bottom: #aaa dotted 1px; padding-right:1em;">&middot;
	    <% login = gitrepo.maintainer.login -%>
        <% login = 'php_coder' if gitrepo.maintainer.login == 'php-coder' -%>
        <% login = 'psolntsev' if gitrepo.maintainer.login == 'p_solntsev' -%>
        <%= link_to gitrepo.repo, 'http://git.altlinux.org/people/' + login + '/packages/?p=' + gitrepo.repo + '.git', :class => 'news' %>
      </td>
      <td><%= gitrepo.lastchange %></td>
    </tr>
  <% end -%>
</table>
<% end -%>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
