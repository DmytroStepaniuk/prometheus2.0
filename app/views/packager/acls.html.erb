<% title _("Prometheus 2.0 - Maintainer &laquo;") + @packager.name + _("&raquo; - ACL's") -%>
<% url "/packager/" + @packager.login + "/acls" -%>

<div class="header"><%= _("Maintainer:") %> <%= @packager.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>" class="news" title="<%= _("information about maintainer") %>"><%= _("Information") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Packages") %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/gear" class="news" title="<%= _("gear") %>"><%= _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/bugs" class="news" title="<%= _("Bugs/FR statistics assigned to this maintainer") %>"><%= _("Bugs and FR") %></a>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><p class="break" />
<b><%= _("List of packages which was built by this maintainer:") %></b> [<%= @acls.count %>] <br /><br />

<table id="bugs" cellspacing="0" cellpadding="3" class="sortable">
  <tr>
    <th class="sort"><%= _("package") %></th>
    <th class="sort"><%= _("leader") %></th>
    <th class="nosort"><%= _("ACL's") %></th>
  </tr>

  <% @acls.each do |acl| -%>
  <tr>
    <td><%= acl.srpm.name %></td>
    <td><%= acl.srpm.name %></td>
    <td>
      <% acl.srpm.acls.each do |login| %>
        <%= login.login %>
      <% end %>
    </td>
  </tr>
  <% end -%>

</table>
