<% srpm_count @sisyphus.srpms.all.count -%>
<% title _("Prometheus 2.0 - Maintainer &laquo;") + h(@packager.name) + _("&raquo; - Repocop") -%>
<% url "/packager/" + h(@packager.login) + "/repocop" -%>

<div class="header"><%=h _("Maintainer:") %> <%=h @packager.name %></div>

<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%=h params[:locale] %>/packager/<%=h h@packager.login %>" class="news" title="<%=h _("information about maintainer") %>"><%=h _("Information") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%=h params[:locale] %>/packager/<%=h h@packager.login %>/srpms" class="news" title="<%=h _("packages which was built by this maintainer") %>"><%=h _("Packages") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%=h params[:locale] %>/packager/<%=h h@packager.login %>/gear" class="news" title="<%=h _("gear") %>"><%=h _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%=h params[:locale] %>/packager/<%=h h@packager.login %>/bugs" class="news" title="<%=h _("Bugs/FR statistics assigned to this maintainer") %>"><%=h _("Bugs and FR") %></a>&nbsp;</span><span class="current">&nbsp;<b><%=h _("Repocop") %></b>&nbsp;</span><p class="break" />
<b><%=h _("Repocop messages:") %></b><br /><br />

<table id="bugs" cellspacing="0" cellpadding="3" class="sortable">
  <tr>
    <th class="sort"><%=h _("package") %></th>
    <th class="nosort"><%=h _("status") %></th>
    <th class="sort"><%=h _("test") %></th>
    <th class="sort"><%=h _("message") %></th>
  </tr>

<% @packager.srpms.each do |srpm| -%>
<% srpm.repocops.each do |repocop| -%>
  <% if repocop.status != 'skip' and repocop.status != 'ok' -%>
  <tr>
    <td class="strange">
      <%= link_to h(repocop.name) + '-' + h(repocop.version) + '-' + h(repocop.release) + '.' + h(repocop.arch), '/' + h(params[:locale]) + '/srpm/Sisyphus/' + h(srpm.name), :class => 'news', :title => 'detailed information about RPM' %>
    </td>
    <td><img src="/images/<%=h repocop.status %>.png" alt="<%=h repocop.status %>" /><br /><%=h repocop.status %></td>
    <td><%=h repocop.testname %></td>
    <td style="text-align:left"><%=h repocop.message %></td>
  </tr>
  <% end -%>
<% end -%>
<% end -%>

</table>
