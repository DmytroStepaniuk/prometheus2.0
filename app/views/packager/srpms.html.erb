<% title _("Prometheus 2.0 - Maintainer &laquo;") + @packager.name + _("&raquo; - Packages") -%>
<% url "/packager/" + @packager.login + "/srpms" -%>

<div class="header"><%= _("Maintainer:") %> <%= @packager.name %></div>
<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>" class="news" title="<%= _("information about maintainer") %>"><%= _("Information") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Packages") %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/gear" class="news" title="<%= _("gear") %>"><%= _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/bugs" class="news" title="<%= _("Bugs/FR statistics assigned to this maintainer") %>"><%= _("Bugs and FR") %></a>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/packager/<%= @packager.login %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><p class="break" />
<b><%= _("List of packages which was built by this maintainer:") %></b> [<%= @packager.sisyphus.count %>] <br /><br />

<table id="bugs" cellspacing="0" cellpadding="3" class="sortable">
  <tr>
    <th id="repocop" class="nosort"><%= raw _("repo<br/>cop") %></th>
    <th class="sort"><%= _("package") %></th>
    <th class="nosort"><%= raw _("current<br />version") %></th>
    <th class="sort"><%= _("build time") %></th>
    <th class="nosort"><%= _("age") %></th>
    <th class="nosort"><%= _("Url") %></th>
    <th class="nosort"><%= _("Summary") %></th>
  </tr>

  <% @packager.sisyphus.each do |acl| -%>
  <% if !acl.srpm.nil? -%>
  <tr>
    <td>
      <%= link_to '<img src="/images/' + acl.srpm.repocop + '.png" alt="' + acl.srpm.repocop + '" />', '/' + params[:locale] + '/srpm/Sisyphus/' + acl.srpm.name + '/repocop', :class => 'repocoplink', :title => 'repocop'  %>
    </td>
    <td class="strange">
      <%= link_to acl.srpm.name, '/' + params[:locale] + '/srpm/Sisyphus/' + acl.srpm.name, :class => 'news' %>
    </td>
    <td><%= acl.srpm.version %>-<%= acl.srpm.release %></td>
    <td><%= acl.srpm.buildtime %></td>
    <td><%= time_ago_in_words(acl.srpm.buildtime) %> <%= _("ago") %></td>
    <td>
      <% if acl.srpm.url != nil %><%= link_to acl.srpm.url[0..27] + '...', acl.srpm.url, :class => 'news', :rel => 'nofollow' %><% else %>-<% end %>
    </td>
    <td style="text-align:left;"><%= acl.srpm.summary %></td>
  </tr>
  <% end -%>
  <% end -%>

</table>
