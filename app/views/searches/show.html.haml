= title _("Prometheus 2.0 - Search")

#main-content

  %div{ :class => 'header', :style => 'letter-spacing: 1px;'}= _("Search")
  %p.break
  = form_tag search_path(:branch => @branch.name), :method => :get do
    = select_tag :branch_id, options_from_collection_for_select(@branches, 'id', 'name', @branch.id)
    = text_field_tag :query, params[:query] ? params[:query] : "Search...", :size => '20'
    = submit_tag 'Search', :name => nil, :class => 'top-go', :id => 'subOn', :value => _("find"), :onmouseover => "m_on('subOn')", :onmouseout => "m_off('subOn')"

  %br
  %br
  = _("On your query &quot;").html_safe
  %b>= params[:query]
  = (_("&quot; in branch %s were found") % "#{@branch.name}").html_safe
  %b= @srpms_count
  = n_("RPM:", "RPMs:", @srpms_count)

  %p.break
  %br
  %table{ :id => 'bugs', :cellspacing => '0', :cellpadding => '3' }
    %tr
      - if @branch.name == 'Sisyphus'
        %th= raw _("repo<br/>cop")
      %th= _("package")
      %th= raw _("current<br />version")
      %th= _("build time")
      %th= _("age")
      %th= _("Url")
      %th= _("summary")

    - if !@exact_srpm.nil?
      %tr
        - if @branch.name == 'Sisyphus'
          %td
            = link_to image_tag(@exact_srpm.repocop + '.png', :size => '20x20', :alt => @exact_srpm.repocop), repocop_srpm_path(:id => @exact_srpm.name), :class => 'repocoplink', :title => 'repocop'
        %td{ :class => 'strange' }
          = link_to @exact_srpm.name, srpm_path(:id => @exact_srpm.name, :branch => 'Sisyphus'), :class => 'news'
        %td= "#{@exact_srpm.version}-#{@exact_srpm.release}"
        %td= @exact_srpm.buildtime
        %td= "#{time_ago_in_words(@exact_srpm.buildtime)} #{_('ago')}"
        %td
          - if !@exact_srpm.url.nil?
            = link_to @exact_srpm.url[0..27] + '...', @exact_srpm.url, :class => 'news', :rel => 'nofollow'
          - else 
            &ndash;
        %td= @exact_srpm.summary

    - @srpms.reject{|srpm| srpm.name == @exact_srpm.name}.each do |srpm|
      %tr
        - if @branch.name == 'Sisyphus'
          %td
            = link_to image_tag(srpm.repocop + '.png', :size => '20x20', :alt => srpm.repocop), repocop_srpm_path(:id => srpm.name), :class => 'repocoplink', :title => 'repocop'
        %td{ :class => 'strange' }
          = link_to srpm.name, srpm_path(:id => srpm.name, :branch => 'Sisyphus'), :class => 'news'
        %td= "#{srpm.version}-#{srpm.release}"
        %td= srpm.buildtime
        %td= "#{time_ago_in_words(srpm.buildtime)} #{_('ago')}"
        %td
          - if srpm.url != nil
            = link_to srpm.url[0..27] + '...', srpm.url, :class => 'news', :rel => 'nofollow'
          - else 
            &ndash;
        %td= srpm.summary

#bottom-offset-l
  #bottom-offset-r
    &nbsp;
