xml.instruct! :xml, :version=>"1.0"
xml.urlset(:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9") {
  @srpms.each do |srpm|
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/changelog'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/spec'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/gear'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/bugs'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/allbugs'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
    xml.url {
      xml.loc 'http://prometheus.altlinux.org/en/srpm/' + srpm.branch + '/' + srpm.name + '/repocop'
      xml.lastmod(Time.new.strftime("%Y-%m-%d"))
      xml.changefreq("daily")
      xml.priority(1)
    }
  end
}

