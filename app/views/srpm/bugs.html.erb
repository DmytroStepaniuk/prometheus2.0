<% title _("Prometheus 2.0 - Package ") + @srpm.name + _(" - Bugs") -%>
<% url "/srpm/" + @srpm.branch.name + '/' + @srpm.name + "/bugs" -%>

<div id='main-content'>

<div style="height:3em;">
    <div id="rpmtop">
        <%= render :partial => "group" %>
        <div class="header" style="letter-spacing:1px;"><%= _("Source RPM:") %> <%= @srpm.name %></div>
    </div>
</div>

<div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _("Main"), srpm_main_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("information about SRPM") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Changelog"), srpm_changelog_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("full changelog") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Spec"), srpm_rawspec_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("spec") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Download"), srpm_download_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("download latest version") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Gear"), srpm_gear_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("this package in gear repositories") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Bugs and FR") %></b>&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Repocop"), srpm_repocop_path(:branch => params[:branch], :name => params[:name]), :class => 'news', :title => _("repocop bugreports") %>&nbsp;</span><p class="news" /><br />

<% if @allbugs.count == 0 -%>

<b><%= _("There is no bugreports for this ALT Bugzilla") %></b>

<% else %>

<b><%= _("Total:") %></b> <%= @allbugs.count %> (<span style='color:red'><%= @bugs.count %></span>|<%= @allbugs.count - @bugs.count %>)

<div style="text-align:left;margin-left:2em;margin-top:1.5em;">
<span class="tabsel">&nbsp;<%= _("open") %>&nbsp;</span>
<span class="tabunsel">&nbsp;<%= link_to _("total"), srpm_allbugs_path(:branch => params[:branch], :name => params[:name]), :class => 'news' %>&nbsp;</span>
</div>

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _("id") %></th>
    <th><%= _("severity") %></th>
    <th><%= _("status") %></th>
    <th><%= _("reporter") %></th>
    <th><%= _("summary") %></th>
  </tr>

  <% @bugs.each do |bug| -%>
  <tr>
    <td>
      <%= link_to bug.bug_id, 'https://bugzilla.altlinux.org/' + bug.bug_id.to_s, :class => 'news' %>
    </td>
    <td><%= bug.bug_severity %></td>
    <td><%= bug.bug_status %></td>
    <td><%= bug.reporter.gsub('@', ' at ') %></td>
    <td style="text-align: left">
      <%= bug.short_desc %>
    </td>
  </tr>
  <% end -%>

</table>

<% end -%>

</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
