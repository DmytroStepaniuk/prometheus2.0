<table id="bugs" cellspacing="0" cellpadding="3">
<tr>
<th>id</th>
<th>severity</th>
<th>status</th>
<th>reporter</th>
<th>summary</th>
</tr>

<% @bugs.each do |b| %>
<tr>
  <td>
    <%= link_to h(b.bug_id), 'https://bugzilla.altlinux.org/show_bug.cgi?id=' + h(b.bug_id), :class => 'news', :target => '_blank' %>
  </td>
  <td><%=h b.bug_severity %></td>
  <td><%=h b.bug_status %></td>
  <td><%=h b.reporter.gsub('@', ' at ') %></td>
  <td style="text-align:left">
    <%=h b.short_desc %>
  </td>
</tr>
<% end %>

</table>

