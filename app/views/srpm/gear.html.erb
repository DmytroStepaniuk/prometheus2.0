<% title _("Prometheus 2.0 - Package ") + @srpm.name + _(" - Gear") -%>
<% url "/srpm/" + @srpm.branch.name + '/' + @srpm.name + "/gear" -%>

<div style="height:3em;">
    <div id="rpmtop">
        <%= render :partial => "group" %>
        <div class="header" style="letter-spacing:1px;"><%= _("Source RPM:") %> <%= @srpm.name %></div>
    </div>
</div>

<div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _("Main"), srpm_main_path(:branch => @srpm.branch.name, :name => @srpm.name), :class => 'news', :title => _("information about SRPM") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Changelog"), srpm_changelog_path(:branch => @srpm.branch.name, :name => @srpm.name), :class => 'news', :title => _("full changelog") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Spec"), srpm_rawspec_path(:branch => @srpm.branch.name, :name => @srpm.name), :class => 'news', :title => _("spec") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _("Download"), srpm_download_path(:branch => @srpm.branch.name, :name => @srpm.name), :class => 'news', :title => _("download latest version") %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Gear") %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/bugs" class="news" title="<%= _("list of bugs and feature requests") %>"><%= _("Bugs and FR") %></a>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><div>

<% if @gitrepos.count != 0 -%>
<table style="pretty">
  <% @gitrepos.each do |gitrepo| -%>
    <tr>
      <td style="border-bottom: #aaa dotted 1px; padding-right:1em;">&middot;
        <% login = gitrepo.maintainer.login -%>
        <% login = 'php_coder' if gitrepo.maintainer.login == 'php-coder' -%>
        <% login = 'psolntsev' if gitrepo.maintainer.login == 'p_solntsev' %>
        <%= link_to gitrepo.maintainer.name, 'http://git.altlinux.org/people/' + gitrepo.maintainer.login + '/packages/?p=' + @srpm.name + '.git', :class => 'news' %> (<%= gitrepo.maintainer.login %>@)
      </td>
      <td><%= gitrepo.lastchange %></td>
    </tr>
  <% end -%>
</table>
<% end -%>
</div>
</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
