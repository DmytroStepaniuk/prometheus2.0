<% title _("Prometheus 2.0 - Package ") + @srpm.name -%>
<% url "/srpm/" + @srpm.branch.name + '/' + @srpm.name -%>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _("ALT Linux repositories") %>">
  <%= _("ALT Linux repos") %>
</div>
<img id="topRPM" src="/images/collapse.gif" class="close" title="<%= _("hide window") %>" alt="<%= _("hide window") %>" />
</div>
<div id="topRPMDiv" style="border: dotted gray 1px;margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">

<% @allsrpms.each do |rpm| -%>
<tr>
  <td style="text-align: left;">
    <%= link_to rpm.branch.name + ':', '/' + params[:locale] + '/srpm/' + rpm.branch.name + '/' + rpm.name, :class => 'news' %>
  </td>
  <td style="text-align: right;"><%= rpm.version %>-<%= rpm.release %></td>
</tr>
<% end -%>

</table>
</div><br />
</div>

<div style="height:3em;">
  <div id="rpmtop">
    <%= render :partial => "group" %>
    <div class="header" style="letter-spacing:1px;"><%= _("Source RPM:") %> <%= @srpm.name %></div>
  </div>
</div>

<div>
<p class="break" />
<span class="current">&nbsp;<b><%= _("Main") %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/changelog" class="news" title="<%= _("full changelog") %>"><%= _("Changelog") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/spec" class="news" title="<%= _("spec") %>"><%= _("Spec") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/get" class="news" title="<%= _("download latest version") %>"><%= _("Download") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/gear" class="news" title="<%= _("this package in gear repositories") %>"><%= _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/bugs" class="news" title="<%= _("list of bugs and feature requests") %>"><%= _("Bugs and FR") %></a>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= @srpm.branch.name %>/<%= @srpm.name %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><p class="news" />
<b><%= _("Current version:") %></b> <span style="text-decoration:underline"><%= @srpm.version %>-<%= @srpm.release %></span><br />
<b><%= _("Build date:") %></b> <%= @srpm.buildtime %> (<%= time_ago_in_words(@srpm.buildtime) %> <%= _("ago") %>)<br />
<b><%= _("Size:") %></b> <%= number_to_human_size(@srpm.size) %><br /><br />

<% if !@srpm.url.nil? -%>
<b><%= _("Home page:") %></b> &nbsp; <%= link_to @srpm.url, @srpm.url, :class => 'news', :rel => 'nofollow' %><br /><br />
<% end -%>

<b><%= _("License:") %></b> <span class="news-text"><%= @srpm.license %></span><br />

<b><%= _("Summary:") %></b> <span class="news-text"><%= @srpm.summary %></span><br />
<b><%= _("Description:") %></b> <div class="para"><%= simple_format @srpm.description %></div>
<p class="news" />
<% if !@srpm.maintainer.nil? -%>
<div class="maintainer"><b><%= _("Current maintainer:") %></b>
<% if @srpm.maintainer.team -%>
  <%= link_to @srpm.maintainer.name, '/' + params[:locale] + '/team/' + @srpm.maintainer.login[1..-1], :class => 'news', :title => _('information about maintainer') %><br /><br />
<% else -%>
  <%= link_to @srpm.maintainer.name, '/' + params[:locale] + '/packager/' + @srpm.maintainer.login, :class => 'news', :title => _('information about maintainer') %><br /><br />
<% end -%>
<% end -%>

<% if !@srpm.packages.nil? %>
<b><%= _("List of rpms provided by this srpm:") %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
  <% @srpm.packages.each do |package| -%>
    <li><%= package.filename %></li>
  <% end -%>
  </ul>
</div>
<% end %>

<% if !@srpm.acls.nil? %>
<b><%= _("ACL:") %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
  <% @srpm.acls.each do |acl| -%>
    <% if acl.maintainer.team %>
      <li><%= link_to acl.maintainer.name, '/' + params[:locale] + '/team/' + acl.maintainer.login[1..-1], :class => 'news' %></li>
    <% else %>
      <li><%= link_to acl.maintainer.name, '/' + params[:locale] + '/packager/' + acl.maintainer.login, :class => 'news' %></li>
    <% end %>
  <% end -%>
  </ul>
</div>
<% end -%>
</div>
