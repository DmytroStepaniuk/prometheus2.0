<% title _('Prometheus 2.0 - Package &laquo;%s&raquo;') % @srpm_show.srpm.name %>
<% description "#{@srpm_show.srpm.name} - #{@srpm_show.srpm.summary}" %>
<% keywords @srpm_show.srpm.summary %>

<div id='main-content'>
  <div id="rightbar">
    <%= render 'allsrpms_info', allsrpms: @srpm_show.allsrpms %>

    <%= render 'perl_watch', perl_watch: @srpm_show.perl_watch %>
</div>

<div style="height:3em;">
  <div id="rpmtop">
    <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@srpm_show.srpm.groupname) %></b><br>
    <div class="header" style="letter-spacing:1px;"><%= _('Source RPM:') %> <%= @srpm_show.srpm.name %></div>
  </div>
</div>

<div>
<p class="break" />
<span class="current">&nbsp;<b><%= _('Main') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Changelog'), changelog_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('full changelog') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Spec'), spec_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('spec') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Patches'), srpm_patches_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('patches') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Sources'), srpm_sources_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('sources') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Download'), get_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('download latest version') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('this package in gear repositories') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_srpm_path(@srpm_show.srpm), class: 'news', title: _('list of bugs and feature requests') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_srpm_path(@srpm_show.srpm), class: 'news', title: _('repocop bugreports') %>&nbsp;</span><p class="news" />
<b><%= _('Current version:') %></b> <%= "#{@srpm_show.srpm.version}-#{@srpm_show.srpm.release}" %><br>
<b><%= _('Built:') %></b> <abbr title="<%= @srpm_show.srpm.buildtime %>" style="border-bottom: 1px dotted gray;"><%= time_ago_in_words(@srpm_show.srpm.buildtime) %> <%= _('ago') %></abbr><br>
<% unless @srpm_show.ftbfs.empty? %>
  <b><%= _('<abbr title="Fails To Build From Source">FTBFS:</abbr>').html_safe %></b>
  <% if @srpm_show.ftbfs.count == 2 %>
    <% if @srpm_show.ftbfs.first.weeks == @srpm_show.ftbfs.last.weeks %>
      <%= @srpm_show.ftbfs.first.weeks %> weeks on <%= @srpm_show.ftbfs.first.arch %>, <%= @srpm_show.ftbfs.last.arch %><br>
    <% else %>
      <%= @srpm_show.ftbfs.first.weeks %> weeks on <%= @srpm_show.ftbfs.first.arch %> and <%= @srpm_show.ftbfs.last.weeks %> weeks on <%= @srpm_show.ftbfs.last.arch %><br>
    <% end %>
  <% else %>
    <%= @srpm_show.ftbfs.last.weeks %> weeks on <%= @srpm_show.ftbfs.last.arch %><br>
  <% end %>
<% end %>
<b><%= _('Size:') %></b> <%= number_to_human_size(@srpm_show.srpm.size) %><br><br>

<% if @srpm_show.srpm.url %>
<b><%= _('Home page:') %></b> &nbsp; <%= link_to @srpm_show.srpm.url, @srpm_show.srpm.url, class: 'news', rel: 'nofollow' %><br><br>
<% end %>

<b><%= _('License:') %></b> <span class="news-text"><%= @srpm_show.srpm.license %></span><br>
<b><%= _('Summary:') %></b> <span class="news-text"><%= @srpm_show.srpm.summary %></span><br>
<b><%= _('Description:') %></b> <div class="para"><%= simple_format h(@srpm_show.srpm.description) %></div>
<p class="news" />

<%= render 'leader', leader: @srpm_show.leader, branch: @srpm_show.branch %>

<%= render 'contributors', contributors: @srpm_show.srpm.contributors %>

<% if @srpm_show.maintainers || @srpm_show.teams %>
<b><%= _('ACL:') %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
  <% @srpm_show.maintainers.each do |maintainer| %>
    <li>
      <%= link_to _(maintainer.name), maintainer_path(@srpm_show.branch, maintainer), class: 'news',
          title: _('information about maintainer') %>
    </li>
  <% end %>
  <% @srpm_show.teams.each do |team| %>
    <li>
      <%= link_to team.name, team_path(@srpm_show.branch, team.login[1..-1]), class: 'news' %>
    </li>
  <% end %>
  </ul>
</div>
<% end %>

<% if @srpm_show.srpm.packages %>
<b><%= _('List of rpms provided by this srpm:') %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
    <% @srpm_show.srpm.packages.map { |p| p.name }.sort.uniq.each do |name| %>
      <li><%= name %></li>
    <% end %>
  </ul>
</div>
<% end %>

</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
