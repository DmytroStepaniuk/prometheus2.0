<% title _('Prometheus 2.0 - Package &laquo;%s&raquo;') % @srpm_show.srpm.name %>
<% description "#{@srpm_show.srpm.name} - #{@srpm_show.srpm.summary}" %>
<% keywords @srpm_show.srpm.summary %>

<div id='main-content'>
  <div id="rightbar">
    <%= render 'allsrpms_info', allsrpms: @srpm_show.allsrpms %>
    <%= render 'perl_watch', perl_watch: @srpm_show.perl_watch %>
  </div>

  <div style="height:3em;">
    <div id="rpmtop">
      <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@srpm_show.srpm.groupname) %></b><br>
      <div class="header" style="letter-spacing:1px;"><%= _('Source RPM:') %> <%= @srpm_show.srpm.name %></div>
    </div>
  </div>

  <p class="break" />
  <span class="current">&nbsp;<b><%= _('Main') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Changelog'), changelog_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('full changelog') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Spec'), spec_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('spec') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Patches'), srpm_patches_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('patches') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Sources'), srpm_sources_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('sources') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Download'), get_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('download latest version') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_srpm_path(@srpm_show.branch, @srpm_show.srpm), class: 'news', title: _('this package in gear repositories') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_srpm_path(@srpm_show.srpm), class: 'news', title: _('list of bugs and feature requests') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_srpm_path(@srpm_show.srpm), class: 'news', title: _('repocop bugreports') %>&nbsp;</span>
  <p class="news" />
  <b><%= _('Current version:') %></b> <%= @srpm_show.srpm.evr %><br>
  <b><%= _('Built:') %></b> <abbr title="<%= @srpm_show.srpm.buildtime %>" style="border-bottom: 1px dotted gray;"><%= time_ago_in_words(@srpm_show.srpm.buildtime) %> <%= _('ago') %></abbr><br>
  <%= render 'ftbfs', ftbfs: @srpm_show.ftbfs %>
  <b><%= _('Size:') %></b> <%= number_to_human_size(@srpm_show.srpm.size) %><br><br>

  <% if @srpm_show.srpm.url %>
    <b><%= _('Home page:') %></b> &nbsp; <%= link_to @srpm_show.srpm.url, @srpm_show.srpm.url, class: 'news', rel: 'nofollow' %><br><br>
  <% end %>

  <b><%= _('License:') %></b> <span class="news-text"><%= @srpm_show.srpm.license %></span><br>
  <b><%= _('Summary:') %></b> <span class="news-text"><%= @srpm_show.srpm.summary %></span><br>
  <b><%= _('Description:') %></b> <div class="para"><%= simple_format h(@srpm_show.srpm.description) %></div>
  <p class="news" />

  <%= render 'leader', leader: @srpm_show.leader, branch: @srpm_show.branch %>
  <%= render 'contributors', contributors: @srpm_show.srpm.contributors %>
  <%= render 'acls', branch: @srpm_show.branch,
                     maintainers: @srpm_show.maintainers,
                     teams: @srpm_show.teams %>

  <%= render 'packages', packages: @srpm_show.srpm.packages %>
</div>

<div id="bottom-offset-l">
  <div id="bottom-offset-r">
    &nbsp;
  </div>
</div>
